{
  "compilerOptions": {
    "allowJs": true,
    "target": "es5",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["lib"],
  "exclude": ["node_modules", "dist", "examples"]
}
